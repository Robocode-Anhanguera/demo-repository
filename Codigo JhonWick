package sample;
import robocode.*;
import robocode.AdvancedRobot;
import robocode.HitRobotEvent;
import robocode.ScannedRobotEvent;
import java.awt.Color;

public class JhonWickv19  extends AdvancedRobot {

    public void run() { // Defina Cores
        setBodyColor(Color.blue);
        setGunColor(Color.blue);
        setRadarColor(Color.black);
        setScanColor(Color.yellow);
        while (true) { // Fazer Movimento Circular
            setTurnRight(10000);
            setMaxVelocity(5);
            ahead(10000);
        }
    }
    public void onScannedRobot(ScannedRobotEvent e) { // scaneia o adversario
        fire(3);
    }
    public void onHitRobot(HitRobotEvent e) { // Atirar se o Robo tiver na Frente
        if (Math.abs(e.getBearing()) < 10) {
            fire(3);
        }
        if (e.isMyFault()) {
            turnRight(10);
        }
    }
}
